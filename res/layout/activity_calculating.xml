<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/init"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:editable="false"
        android:gravity="center"
        android:textSize="18sp" />

    <TableRow android:gravity="center" >

        <Button
            android:id="@+id/btn_1"
            android:layout_weight="1"
            android:onClick="OnClick"
            android:text="1" />

        <Button
            android:id="@+id/btn_2"
            android:layout_weight="1"
            android:onClick="OnClick"
            android:text="2" />

        <Button
            android:id="@+id/btn_3"
            android:layout_weight="1"
            android:onClick="OnClick"
            android:text="3" />

        <Button
            android:id="@+id/add"
            android:layout_weight="1"
            android:onClick="OnClick"
            android:text="+" />
    </TableRow>

    <TableRow android:gravity="center" >

        <Button
            android:id="@+id/btn_4"
            android:layout_weight="1"
            android:onClick="OnClick"
            android:text="4" />

        <Button
            android:id="@+id/btn_5"
            android:layout_weight="1"
            android:onClick="OnClick"
            android:text="5" />

        <Button
            android:id="@+id/btn_6"
            android:layout_weight="1"
            android:onClick="OnClick"
            android:text="6" />

        <Button
            android:id="@+id/subtract"
            android:layout_weight="1"
            android:onClick="OnClick"
            android:text="-" />
    </TableRow>

    <TableRow android:gravity="center" >

        <Button
            android:id="@+id/btn_7"
            android:layout_weight="1"
            android:onClick="OnClick"
            android:text="7" />

        <Button
            android:id="@+id/btn_8"
            android:layout_weight="1"
            android:onClick="OnClick"
            android:text="8" />

        <Button
            android:id="@+id/btn_9"
            android:layout_weight="1"
            android:onClick="OnClick"
            android:text="9" />

        <Button
            android:id="@+id/multiply"
            android:layout_weight="1"
            android:onClick="OnClick"
            android:text="*" />
    </TableRow>

    <TableRow android:gravity="center" >

        <Button
            android:id="@+id/btn_0"
            android:layout_weight="6"
            android:onClick="OnClick"
            android:text="0" />

        <Button
            android:id="@+id/dat"
            android:layout_weight="1"
            android:onClick="OnClick"
            android:text="." />

        <Button
            android:id="@+id/divide"
            android:layout_weight="1"
            android:onClick="OnClick"
            android:text="/" />
    </TableRow>

    <TableRow android:gravity="center" >

        <Button
            android:id="@+id/equal"
            android:layout_weight="1"
            android:onClick="OnClick"
            android:text="=" />
    </TableRow>

</TableLayout>